extends layout.pug

block extra
        link(rel='stylesheet' href='/css/login.css')
        title Login - Comicast    

block content   
    .upper
        img.logo(src='/images/logo.png')
        br
        .p-4
            h1 Login
            form.mt-3(action="/users/login", method="post")
                .form-group
                    input.btn.btn-info.p-1(type="text" name="username" placeholder="Username" required)
                .form-group 
                    input.btn.btn-info.p-1(type="password" name="password" placeholder="Password" required)
                button.btn.btn-success(type='submit') Login 
                a(href='/users/register') &nbsp; &nbsp; Sign Up? 