doctype
html(lang='en')
    head
        meta(charset='utf-8')
        title Comicast - Login
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        link(link href="https://fonts.googleapis.com/css?family=Odibee+Sans&display=swap" rel="stylesheet")  
        style
            include login.css
    body
        .container-fluid
            if(error.length > 0)
                    .alert.alert-danger
                        div= error
            img.p-0.ml-5(src='/images/logo.png' class="logo")
            .lower
                .p-5
                    form(action="/users/login", method="post")
                        .form-group
                            label(class="p-0 m-0") Username
                            br
                            input(type="text" name="username" class="p-0" required)
                            br
                        .form-group
                            label(class="p-0 m-0") Password <br/>
                            br
                            input(type="password" name="password" class="p-0" required)
                            br
                        a(href='/users/register') Sign Up?
                        br
                        button.btn.btn-info(type='submit') Login 